generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  role String @default("admin")
  akses Boolean @default(false)
}

model DataPendaftar {
  id Int @id @default(autoincrement())
  institusi String
  alamat String
  telepon String
  fax String
  email String
  namaPeserta String
  telPeserta String
  emailPeserta String
  pelatihan String
}
